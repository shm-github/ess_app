<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.english.a1100words_you_need_to_know.a1100wordsyouneedtoknow.exercise_screen.screens.exercise_screens.WordDefinitionMultiChoiceFragment">



    <TextView
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:gravity="right"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        style="@style/TitleStyle"
        android:background="@color/md_lime_50"
        android:layout_alignParentTop="true"
        android:textColor="#000"
        android:textSize="25sp"
        android:id="@+id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <Button
        android:layout_alignParentBottom="true"
        android:enabled="false"
        android:gravity="center"
        android:id="@+id/check_next"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Check" />



    <FrameLayout
        android:layout_below="@id/tv_question"
        android:layout_above="@id/check_next"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <view.multi_choice_view.MultiChoiceView
        android:id="@+id/multi_choice_view"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </FrameLayout>




</RelativeLayout>
